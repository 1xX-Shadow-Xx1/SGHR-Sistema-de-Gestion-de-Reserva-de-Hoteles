
@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">

    <h2 class="text-center mb-4">Gestión de Clientes</h2>

    <!-- Buscar por cédula arriba alineado a la izquierda -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <label for="buscarCedula" class="fw-bold">Buscar por cédula:</label>
        <input type="text" id="buscarCedula" class="form-control" placeholder="000-0000000-0" style="width: 150px;" maxlength="13">
        <button id="btnBuscar" class="btn btn-info">Buscar</button>
    </div>


    <!-- Contenedor principal para la lista -->
    <div id="contenidoClientes" class="card p-3 shadow-sm mx-auto" style="min-height: 500px; width: 95%;">
        <!-- Aquí se cargará _List, _Create o _Edit -->
    </div>

    <!-- Botones Crear y Cargar Lista debajo, centrados -->
    <div class="mt-3 d-flex gap-2 justify-content-center">
        <button id="btnCrear" class="btn btn-primary">Crear Cliente</button>
        <button id="btnCargarLista" class="btn btn-secondary">Cargar Lista</button>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
                $(document).ready(function() {

            // --- Cargar lista automáticamente al iniciar ---
            //cargarLista();

            // --- Botón Crear ---
            $('#btnCrear').click(function () {
                window.location.href = '@Url.Action("Create", "ClienteAPI")';
            });


            // --- Botón Cargar Lista ---
            $('#btnCargarLista').click(function () {
                cargarLista();
            });

            // --- Botón Buscar por Cédula ---

            $('#btnBuscar').click(function() {
                var cedula = $('#buscarCedula').val().trim(); // obtiene la cédula

                // Validar que no esté vacío y tenga el formato mínimo
                var cedulaRegex = /^\d{3}-\d{7}-\d{1}$/; // formato 000-0000000-0
                if (!cedula || !cedulaRegex.test(cedula)) {
                    alert("Ingrese una cédula válida (000-0000000-0)");
                    return;
                }

                // Llamada AJAX a la acción _List pasando la cédula
                $.get('@Url.Action("_List", "ClienteAPI")', { cedula: cedula }, function(data) {
                    $('#contenidoClientes').html(data);
                }).fail(function() {
                    alert("Cliente no encontrado");
                });
            });

            // Buscar al presionar Enter
            $('#buscarCedula').keypress(function(e) {
                if(e.which == 13) { // Enter
                    $('#btnBuscar').click();
                    e.preventDefault();
                }
            });





            // --- Función para cargar lista ---
            function cargarLista() {
                $.get('@Url.Action("_List", "ClienteAPI")', function(data) {
                    $('#contenidoClientes').html(data);
                });
            }

           // --- DOBLE CLICK y CLICK DERECHO sobre filas (delegación) ---
            $('#contenidoClientes').on('dblclick', '.fila-cliente', function() {
                var id = $(this).data('id');
                // Redirige a la vista completa de Details
                window.location.href = '@Url.Action("Details", "ClienteAPI")/' + id;
            });

             // Botón cancelar en la vista de eliminación → vuelve a la lista
            $('#contenidoClientes').on('dblclick', '.btnCancelDelete', function(e) {
                // Redirige a la vista completa de Details
                e.preventDefault();
                 cargarLista();
            });

            // Boton Confirmar eliminar
            $('#contenidoClientes').on('click', '.btn-eliminar', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('@Url.Action("_Delete", "ClienteAPI")', { id: id }, function(data) {
                    $('#contenidoClientes').html(data);
                });
            });;

            // Botón “Aceptar” → vuelve a la lista
            $('#contenidoClientes').on('click', '#btnVolverIndex', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "ClienteAPI")', function (data) {
                    $('#contenidoClientes').html(data);
                });
            });

            // Botón “Cancelar” dentro de la vista Delete
            $('#contenidoClientes').on('click', '.btn-btnCancelDelete', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "ClienteAPI")', function (data) {
                    $('#contenidoClientes').html(data);
                });
            });

            // Evento Submit del Delete (delegado, funciona con partials)
            $('#contenidoClientes').on('submit', '#formDelete', function (e) {
                e.preventDefault();

                var form = $(this);

                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    success: function (result) {
                        $('#deleteContainer').html(result);
                    }
                });
            });

            autoRefreshList(
            "Administrador/ClienteAPI", // controlador
            "_List",                    // acción
            "contenidoClientes",        // ID del contenedor donde va el partial
            5000                        // intervalo en milisegundos (5s)
        );


        });

    </script>

}