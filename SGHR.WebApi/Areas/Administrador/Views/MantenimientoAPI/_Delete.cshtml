@using SGHR.Web.Models.Operaciones.Mantenimiento
@model MantenimientoModel

<div class="container mt-3" id="deleteContainer">
    <h4>¿Estás seguro de que deseas eliminar este mantenimiento?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Habitacion</dt>
        <dd class="col-sm-10">@Model.NumeroHabitacion</dd>

        <dt class="col-sm-2">Piso</dt>
        <dd class="col-sm-10">@Model.NumeroPiso</dd>

        <dt class="col-sm-2">Realizado Por</dt>
        <dd class="col-sm-10">@Model.RealizadoPor</dd>

        <dt class="col-sm-2">Fecha Inicio</dt>
        <dd class="col-sm-10">@Model.FechaInicio</dd>

        <dt class="col-sm-2">Fecha fin</dt>
        <dd class="col-sm-10">@Model.FechaFin</dd>

        <dt class="col-sm-2">Descripcion</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>

    <form id="formDelete" asp-action="_DeleteConfirmed" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        <button type="button" class="btn btn-secondary btn-btnCancelDelete btnCancelDelete">Cancelar</button>
    </form>
</div>
