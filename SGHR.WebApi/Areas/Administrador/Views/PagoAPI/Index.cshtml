@{
    ViewData["Title"] = "Pagos";
}

<div class="container mt-4">

    <h2 class="text-center mb-4">Gestión de Pagos</h2>


    <!-- Contenedor principal para resumen de pagos -->
    <div id="contenidoResumenPagos" class="card p-3 shadow-sm mx-auto mb-5" style="min-height: 300px; width: 50%;">
        <!-- Aquí se cargará _List, _Create o _Edit -->
    </div>


    <!-- Buscar por ID arriba alineado a la izquierda -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <label for="buscarId" class="fw-bold">Pagos de cliente:</label>
        <input type="number" id="buscarId" class="form-control" placeholder="ID pago" style="width: 150px;">
        <button id="btnBuscar" class="btn btn-info">Buscar</button>
    </div>

    <!-- Contenedor principal para la lista -->
    <div id="contenidoPagos" class="card p-3 shadow-sm mx-auto" style="min-height: 500px; width: 95%;">
        <!-- Aquí se cargará _List, _Create o _Edit -->
    </div>

    <!-- Botones Crear y Cargar Lista debajo, centrados -->
    <div class="mt-3 d-flex gap-2 justify-content-center">
        <button id="btnRealizar" class="btn btn-primary">Realizar Pago</button>
        <button id="btnCargarLista" class="btn btn-secondary">Cargar Lista</button>

    </div>

    
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
                $(document).ready(function() {

            // --- Cargar lista automáticamente al iniciar ---
            //cargarLista();
            //cargarResumen();

            // --- NUEVA FUNCIÓN: Detectar redirección a ErrorPage ---
            function manejarPosibleError(response) {
                if (response && response.redirectToError) {
                    window.location.href = '/Error/ErrorPage?StatusCode=' + response.statusCode + '&ErrorMessage=' + encodeURIComponent(response.errorMessage);
                    return true;
                }
                return false;
            }

            // --- Botón Realizar Pago ---
             $('#btnRealizar').click(function () {
                window.location.href = '@Url.Action("RealizarPago", "PagoAPI")';
            });


            // --- Botón Cargar Lista ---
            $('#btnCargarLista').click(function () {
                cargarLista();
            });

           // --- Botón Lista de Pagos por ID Cliente ---
            $('#btnBuscar').click(function() {
                var id = $('#buscarId').val().trim(); // obtiene el ID
                if (!id || id <= 0) {
                    alert("Ingrese un ID válido");
                    return;
                }

                $.get('@Url.Action("_List", "PagoAPI")', { id: id }, function(data) {
                    if (manejarPosibleError(data)) return;
                    $('#contenidoPagos').html(data);
                }).fail(function() {
                    alert("Pago no encontrado");
                });
            });
            $('#buscarId').keypress(function(e) {
                if(e.which == 13) {
                    $('#btnBuscar').click();
                    e.preventDefault();
                }
            });

            // Botón Anular - carga la vista parcial
            $(".btn-anular").click(function () {
                var id = $(this).data("id");

                $.get('@Url.Action("_AnularPago", "PagoAPI")', { id: id }, function (data) {
                    if (manejarPosibleError(data)) return;
                    $("#contenidoPago").html(data);
                });
            });

            // --- Función para cargar lista ---
            function cargarLista() {
                $.get('@Url.Action("_List", "PagoAPI")', function(data) {
                    if (manejarPosibleError(data)) return;
                    $('#contenidoPagos').html(data);
                });
            }

            // --- Función para cargar Resumen ---
            function cargarResumen() {
                $.get('@Url.Action("_resumenPagos", "PagoAPI")', function(data) {
                    if (manejarPosibleError(data)) return;
                    $('#contenidoResumenPagos').html(data);
                });
            }

             // Anular pago
            $('#contenidoPagos').on('click', '.btn-anular', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('@Url.Action("_AnularPago", "PagoAPI")', { id: id }, function(data) {
                    if (manejarPosibleError(data)) return;
                    $('#contenidoPagos').html(data);
                });
            });

           // --- DOBLE CLICK ---
            $('#contenidoPagos').on('dblclick', '.fila-pago', function() {
                var id = $(this).data('id');
                window.location.href = '@Url.Action("Details", "PagoAPI")/' + id;
            });

             // Botón cancelar
            $('#contenidoPagos').on('dblclick', '.btnCancelDelete', function(e) {
                e.preventDefault();
                 cargarLista();
            });

            // Boton Confirmar eliminar
            $('#contenidoPagos').on('click', '.btn-eliminar', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('@Url.Action("AnularConfirmed", "PagoAPI")', { id: id }, function(data) {
                    if (manejarPosibleError(data)) return;
                    $('#contenidoPagos').html(data);
                });
            });

            // Botón “Aceptar” → vuelve a la lista
            $('#contenidoPagos').on('click', '#btnVolverIndex', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "PagoAPI")', function (data) {
                    if (manejarPosibleError(data)) return;
                    $('#contenidoPagos').html(data);
                });
            });

            // Botón “Cancelar” dentro de la vista AnularPago
            $('#contenidoPagos').on('click', '.btnCancelDelete', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "PagoAPI")', function (data) {
                    if (manejarPosibleError(data)) return;
                    $('#contenidoPagos').html(data);
                });
            });

            // Evento Submit del Delete (delegado)
            $('#contenidoPagos').on('submit', '#formDelete', function (e) {
                e.preventDefault();
                var form = $(this);

                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    success: function (result) {
                        if (manejarPosibleError(result)) return;
                        $('#deleteContainer').html(result);
                    }
                });
            });

            autoRefreshList(
            "Administrador/PagoAPI", // controlador
            "_List",                    // acción
            "contenidoPagos",        // ID del contenedor donde va el partial
            5000                        // intervalo en milisegundos (5s)
        );
        autoRefreshList(
            "Administrador/PagoAPI", // controlador
            "_resumenPagos",                    // acción
            "contenidoResumenPagos",        // ID del contenedor donde va el partial
            5000                        // intervalo en milisegundos (5s)
        );

        });

    </script>
}

