@using SGHR.Web.Models.Habitaciones.Piso
@model PisoModel

<div class="container mt-3" id="deleteContainer">
    <h4>¿Estás seguro de que deseas eliminar este piso?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">NumeroPiso</dt>
        <dd class="col-sm-10">@Model.NumeroPiso</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>

    <form id="formDelete" asp-action="_DeleteConfirmed" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        <button type="button" class="btn btn-secondary btn-btnCancelDelete btnCancelDelete">Cancelar</button>
    </form>
</div>
