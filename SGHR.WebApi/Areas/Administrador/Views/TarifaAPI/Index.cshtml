@{
    ViewData["Title"] = "Tarifas";
}

<div class="container mt-4">

    <h2 class="text-center mb-4">Gestión de Tarifas</h2>

    <!-- Buscar por ID arriba alineado a la izquierda -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <label for="buscarId" class="fw-bold">Buscar ID:</label>
        <input type="number" id="buscarId" class="form-control" placeholder="ID Tarifa" style="width: 150px;">
        <button id="btnBuscar" class="btn btn-info">Buscar</button>
    </div>

    <!-- Contenedor principal para la lista -->
    <div id="contenidoTarifas" class="card p-3 shadow-sm mx-auto" style="min-height: 500px; width: 95%;">
        <!-- Aquí se cargará _List, _Create o _Edit -->
    </div>

    <!-- Botones Crear y Cargar Lista debajo, centrados -->
    <div class="mt-3 d-flex gap-2 justify-content-center">
        <button id="btnCrear" class="btn btn-primary">Crear Tarifa</button>
        <button id="btnCargarLista" class="btn btn-secondary">Cargar Lista</button>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
                $(document).ready(function() {

            // --- Cargar lista automáticamente al iniciar ---
            //cargarLista();

            // --- Botón Crear ---
             $('#btnCrear').click(function () {
                window.location.href = '@Url.Action("Create", "TarifaAPI")';
            });


            // --- Botón Cargar Lista ---
            $('#btnCargarLista').click(function () {
                cargarLista();
            });

           // --- Botón Buscar por ID ---
            $('#btnBuscar').click(function() {
                var id = $('#buscarId').val().trim(); // obtiene el ID
                if (!id || id <= 0) {
                    alert("Ingrese un ID válido");
                    return;
                }

                // Llamada AJAX a la acción _List pasando el ID
                $.get('@Url.Action("_List", "TarifaAPI")', { id: id }, function(data) {
                    $('#contenidoTarifas').html(data);
                }).fail(function() {
                    alert("Tarifa no encontrada");
                });
            });
            $('#buscarId').keypress(function(e) {
                if(e.which == 13) { // Enter
                    $('#btnBuscar').click();
                    e.preventDefault();
                }
            });




            // --- Función para cargar lista ---
            function cargarLista() {
                $.get('@Url.Action("_List", "TarifaAPI")', function(data) {
                    $('#contenidoTarifas').html(data);
                });
            }

             // Eliminar
            $('#contenidoTarifas').on('click', '.btn-eliminar', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('@Url.Action("_Delete", "TarifaAPI")', { id: id }, function(data) {
                    $('#contenidoTarifas').html(data);
                });
            });

           // --- DOBLE CLICK y CLICK DERECHO sobre filas (delegación) ---
            $('#contenidoTarifas').on('dblclick', '.fila-tarifa', function() {
                var id = $(this).data('id');
                // Redirige a la vista completa de Details
                window.location.href = '@Url.Action("Details", "TarifaAPI")/' + id;
            });

             // Botón cancelar en la vista de eliminación → vuelve a la lista
            $('#contenidoTarifas').on('dblclick', '.btnCancelDelete', function(e) {
                // Redirige a la vista completa de Details
                e.preventDefault();
                 cargarLista();
            });

            // Boton Confirmar eliminar
            $('#contenidoTarifas').on('click', '.btn-eliminar', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('@Url.Action("_Delete", "TarifaAPI")', { id: id }, function(data) {
                    $('#contenidoTarifas').html(data);
                });
            });

            // Botón “Aceptar” → vuelve a la lista
            $('#contenidoTarifas').on('click', '#btnVolverIndex', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "TarifaAPI")', function (data) {
                    $('#contenidoTarifas').html(data);
                });
            });

            // Botón “Cancelar” dentro de la vista Delete
            $('#contenidoTarifas').on('click', '.btnCancelDelete', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "TarifaAPI")', function (data) {
                    $('#contenidoTarifas').html(data);
                });
            });

            // Evento Submit del Delete (delegado, funciona con partials)
            $('#contenidoTarifas').on('submit', '#formDelete', function (e) {
                e.preventDefault();

                var form = $(this);

                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    success: function (result) {
                        $('#deleteContainer').html(result);
                    }
                });
            });

            autoRefreshList(
            "Administrador/TarifaAPI", // controlador
            "_List",                    // acción
            "contenidoTarifas",        // ID del contenedor donde va el partial
            5000                        // intervalo en milisegundos (5s)
        );

        });

    </script>
}